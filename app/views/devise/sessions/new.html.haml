.wrapper
 .log
  %h2 ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
   .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email",class:'input_email'
   .field
    = f.label :password
    %br/
    .field__password
     = f.password_field :password, autocomplete: "current-password"
   - if devise_mapping.rememberable?
    .field
     = f.check_box :remember_me
     = f.label :ログイン情報を記憶する
   .actions
    %label.login
     %button.search-btn
      ログイン
     = f.submit "Log in",class:'none'
= render "devise/shared/links"


